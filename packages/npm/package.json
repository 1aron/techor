{
    "name": "@techor/npm",
    "scripts": {
        "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=cjs --minify --sourcemap --platform=node --external:esbuild --external:@techor/glob --external:@techor/extend --external:@techor/fs",
        "build:esm": "esbuild src/index.ts --bundle --outfile=dist/index.mjs --format=esm --minify --sourcemap --platform=node --external:esbuild --external:@techor/glob --external:@techor/extend --external:@techor/fs",
        "build:type": "tsc --emitDeclarationOnly --preserveWatchOutput",
        "build": "npm run build:cjs && npm run build:esm && npm run build:type",
        "dev": "conc 'npm:build:* -- --watch'",
        "test": "jest",
        "type-check": "tsc --noEmit",
        "lint": "eslint src"
    },
    "license": "MIT",
    "description": "Get, query, and read such as package workspaces via NPM/PNPM.",
    "author": {
        "name": "Aron",
        "email": "i@aron.tw",
        "url": "http://aron.tw"
    },
    "homepage": "https://aron.tw",
    "bugs": {
        "url": "https://github.com/1aron/techor/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/1aron/techor.git",
        "directory": "packages/npm"
    },
    "keywords": [
        "package",
        "json",
        "packagejson",
        "utils",
        "workspaces",
        "npm",
        "pnpm",
        "yarn"
    ],
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "main": "./dist/index.js",
    "jsnext:main": "./dist/index.mjs",
    "esnext": "./dist/index.mjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@techor/glob": "workspace:^",
        "@techor/extend": "workspace:^",
        "@techor/fs": "workspace:^",
        "@techor/log": "workspace:^",
        "js-yaml": "^4.1.0"
    }
}